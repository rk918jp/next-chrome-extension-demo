{
  "manifest_version": 3,
  "name": "Next Chrome Extension Demo",
  "version": "1.0.0",
  "action": {
    "default_icon": "./dist/icon.png",
    "default_popup": "./dist/index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardRead",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  }
}